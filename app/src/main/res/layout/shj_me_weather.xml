<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/weather3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66B3FF"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="请输入搜索的城市"
            android:id="@+id/weather_text4"
            android:layout_marginLeft="70dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/edittext_layout_1"/>
        <ImageView
            android:layout_weight="0.20"
            android:layout_width="90dp"
            android:layout_height="62dp"
            android:src="@drawable/findview"
            android:id="@+id/dzp_search_iv"
            android:onClick="searchCity"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="2pt"
            android:layout_height="75pt"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""
            android:id="@+id/weather_title"
            android:layout_gravity="center"
            android:textSize="20pt"
            android:textColor="#FFF"/>
    </FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     android:gravity="center"
        android:layout_marginBottom="5dp"
        android:textSize="15pt"
        android:id="@+id/weather_text1"
        android:textColor="#FFF"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:textSize="15pt"
        android:id="@+id/weather_text2"
        android:textColor="#FFF"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:textSize="15pt"
        android:id="@+id/weather_text3"
        android:textColor="#FFF"/>
    </LinearLayout>
</LinearLayout>
