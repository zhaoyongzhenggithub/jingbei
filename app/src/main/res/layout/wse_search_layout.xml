<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66B3FF"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:onClick="search_back"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="请输入搜索的关键字"
            android:id="@+id/dzp_search_et"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edittext_layout_1"/>
        <ImageView
            android:layout_weight="0.20"
            android:layout_width="90dp"
            android:layout_height="62dp"
            android:src="@drawable/findview"
            android:id="@+id/dzp_search_iv"
            android:onClick="showGoods"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:id="@+id/dzp_search_lv">

    </ListView>
</LinearLayout>
